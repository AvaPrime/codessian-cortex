# Ava Prime Dashboard v2.0 Environment Configuration

# Core
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# API Keys / Integrations
OPENAI_API_KEY=replace_with_openai_key
GITHUB_TOKEN=replace_with_github_token
GITHUB_REPO_URL=https://github.com/your-org/your-repo
NOTION_API_KEY=replace_with_notion_key
NOTION_DATABASE_ID_INTELLIGENCE=
NOTION_DATABASE_ID_RUNBOOKS=

# Storage / Paths
AUDIT_LOG_DIR=logs
AUDIT_LOG_CONNECTION_STRING=
CACHE_DIR=cache

# Rate Limiting
RATE_LIMIT_MAX_CALLS=60
RATE_LIMIT_PERIOD_SECONDS=60

# Feature Flags
FEATURE_ENABLE_SECURE_CODE_REVIEW=true
FEATURE_ENABLE_MORNING_BRIEFING=true
FEATURE_ENABLE_SYNC_DAEMON=true

# Command Sandbox
SANDBOX_ALLOWLIST=python,node,git
SANDBOX_DENYLIST=rm,-rf,powershell,Invoke-Expression,Invoke-WebRequest

# Sync Daemon
SYNC_DAEMON_PATH=scripts/sync/codessa_sync_daemon.py

